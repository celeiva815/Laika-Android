<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_reminders"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_white_font"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_calendar_reminder_my_dog_edittext"
        android:layout_gravity="center_horizontal"
        android:background="@color/dark_white_font"
        android:textSize="@dimen/name_alarm_reminder_my_dog"
        android:hint="@string/title_reminders_hint"
        android:padding="5dp"
        android:textColor="@color/light_black_font"
        android:singleLine="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_detail_reminders"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_white_font"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_calendar_reminder_my_dog_edittext"
        android:layout_gravity="center_horizontal"
        android:background="@color/dark_white_font"
        android:textSize="@dimen/name_alarm_reminder_my_dog"
        android:hint="@string/detail_reminders_hint"
        android:padding="5dp"
        android:textColor="@color/light_black_font"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_reminder_question"
        android:id="@+id/textView16"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_white_font"
        android:layout_marginBottom="10dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_date_reminder"
            android:id="@+id/date_alarm_remind_my_dog_button"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/alarm_reminder_my_dog"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/dark_white_font"
            android:layout_marginRight="10dp"
            android:padding="0dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_time_reminder"
            android:id="@+id/time_alarm_remind_my_dog_button"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/alarm_reminder_my_dog"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/dark_white_font"
            android:layout_marginLeft="10dp"
            android:padding="0dp" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_reminder"
        android:id="@+id/save_calendar_remind_my_dog_button"
        android:background="@color/dark_white_font"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/save_alarm_reminder_my_dog"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</LinearLayout>