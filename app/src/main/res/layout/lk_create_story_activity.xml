<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateStoryActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CreateStoryActivity">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:text="TÃ­tulo"
                android:textColor="@color/light_black_font"
                android:textSize="@dimen/laika_small_text" />

            <EditText
                android:id="@+id/title_create_story_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView27"
                android:layout_marginBottom="10dp"
                android:background="@drawable/laikatheme_edit_text_holo_light"
                android:maxLength="50"
                android:minLines="2"
                android:singleLine="true"
                android:textSize="@dimen/laika_min_text" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title_create_story_edittext"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Historia"
                android:textColor="@color/light_black_font"
                android:textSize="@dimen/laika_small_text" />

            <EditText
                android:id="@+id/body_create_story_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView28"
                android:background="@drawable/laikatheme_edit_text_holo_light"
                android:gravity="top"
                android:maxLength="500"
                android:minLines="6"
                android:textSize="@dimen/laika_min_text" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:background="@color/laika_light_red"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/adoption_story_imageview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:background="@drawable/laika_ic_action_camera" />
        </RelativeLayout>

        <Button
            android:id="@+id/create_story_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relative_layout_2"
            android:layout_gravity="center_horizontal"
            android:background="@color/laika_red"
            android:padding="20dp"
            android:text="Enviar Historia"
            android:textColor="@color/dark_white_font"
            android:textSize="@dimen/laika_small_text" />

    </RelativeLayout>

</ScrollView>