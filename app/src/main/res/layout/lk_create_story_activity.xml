<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo"
            android:id="@+id/textView27"
            android:textColor="@color/light_black_font"
            android:textSize="@dimen/small_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_create_story_edittext"
            android:singleLine="true"
            android:maxLength="50"
            android:textSize="@dimen/min_text"
            android:minLines="2"
            android:layout_below="@+id/textView27"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:id="@+id/textView28"
            android:textColor="@color/light_black_font"
            android:textSize="@dimen/small_text"
            android:layout_below="@+id/title_create_story_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body_create_story_edittext"
            android:maxLength="500"
            android:minLines="6"
            android:textSize="@dimen/min_text"
            android:layout_below="@+id/textView28"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="top" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adoption_story_imageview"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/happydog"
        android:padding="30dp"
        android:background="@color/light_laika_red"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Historia"
        android:id="@+id/create_story_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/laika_red"
        android:textColor="@color/dark_white_font"
        android:padding="20dp"
        android:textSize="@dimen/small_text" />

</RelativeLayout>