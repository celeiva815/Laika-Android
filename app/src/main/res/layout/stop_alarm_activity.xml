<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:src="@drawable/logo_blanco" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dog_stop_alarm_imageview"
            android:layout_weight="4.5"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_stop_alarm_progressbar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminate="false" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:weightSum="4"
        android:gravity="center"
        android:id="@+id/linearLayout4"
        android:layout_weight="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/category_stop_alarm_imageview"
            android:layout_weight="1"
            android:src="@drawable/lk_food_logo"
            android:padding="15dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_title_stop_alarm_textview"
                android:textColor="@color/laika_dark_white"
                android:textSize="25sp"
                android:text="17:30 - Almuerzo"
                android:paddingBottom="5dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_history_my_dog"
                android:id="@+id/alarm_detail_stop_alarm_textview"
                android:textColor="@color/laika_dark_white"
                android:textSize="@dimen/laika_small_text"
                android:paddingBottom="3dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#666"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:gravity="center">

        android:gravity="center"
        android:textColor="@color/dark_white_font"
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/accept_dialog"
            android:id="@+id/accept_stop_alarm_button"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1.5"
            android:background="@drawable/laika_button"
            android:drawableLeft="@drawable/laika_accept_white"
            android:paddingLeft="30dp"
            android:drawablePadding="-15dp"
            android:textSize="@dimen/laika_biggest_text"
            android:textColor="@color/laika_dark_white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel_dialog"
            android:id="@+id/cancel_stop_alarm_button"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/laika_biggest_text"
            android:textColor="@color/laika_dark_white"
            android:background="@drawable/laika_button"
            android:drawableLeft="@drawable/laika_cancel_white"
            android:paddingLeft="30dp"
            android:drawablePadding="-15dp"/>
    </LinearLayout>

</LinearLayout>