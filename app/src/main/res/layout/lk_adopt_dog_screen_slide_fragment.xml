<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_adopt_dog_success_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/picture_dogs_screen_slide_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lk_blanquito_picture" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lk_heart_image" />

        <TextView
            android:id="@+id/match_dogs_screen_slide_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="19dp"
            android:text="98%"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/name_dogs_screen_slide_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginRight="20dp"
            android:background="#fe2b49"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/search_vet_my_dog_health_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/date_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/adopt_adopt_dog" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingTop="20dp"
        android:weightSum="11" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tips_main_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/lk_gender_icon" />

            <TextView
                android:id="@+id/gender_dogs_screen_slide_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male_adopt_dog_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/events_main_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/lk_age_icon" />

            <TextView
                android:id="@+id/years_dogs_screen_slide_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years_adopt_dog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/news_main_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/lk_size_icon" />

            <TextView
                android:id="@+id/size_dogs_screen_slide_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/big_new_dog_register" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/view_more_dogs_screen_slide_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/lk_more_arrow" />

            <TextView
                android:id="@+id/name_my_dog_profile_activity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_more_adopt_dog" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
