<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="10dp" >
	
	    <TextView
	        android:id="@+id/title_news_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:text="@string/title_news_activity"
	        android:textSize="20sp" />
	
	    <ImageView
	        android:id="@+id/main_news_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:src="@drawable/lk_news" />
	
	    <TextView
	        android:id="@+id/body_news_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:text="@string/body_news_activity" />

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center" >

	        <ImageView
	            android:id="@+id/events_main_imageview"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/fb_logo" />

	        <ImageView
	            android:id="@+id/gplus_news_imageview"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:src="@drawable/gplus_logo" />

	        <ImageView
	            android:id="@+id/news_main_imageview"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/tw_logo" />
	    </LinearLayout>
	
	</LinearLayout>
</ScrollView>
